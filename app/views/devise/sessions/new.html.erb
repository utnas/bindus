<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form'}) do |f| %>
      <h3>Sign in</h3>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
            <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right' %>
        <% end -%>
        <%= f.email_field :email, placeholder: 'Email', :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%- if devise_mapping.recoverable? %>
            <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'right' %>
        <% end -%>
        <%= f.password_field :password, placeholder: 'Password',class: 'form-control' %>
      </div>

      <div class="checkbox">

        <% if devise_mapping.rememberable? -%>
            <label>
              <input type="checkbox" <% :remember_me%>> <%= I18n.t('remember_me')%>
            </label>
        <% end -%>
      </div>
      <div class="actions">
        <%= f.submit 'Sign in', :class => 'btn btn-primary right' %>
      </div>
  <% end %>
</div>